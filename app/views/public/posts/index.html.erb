
<% @posts.each do |post| %>

  <%#= image_tag post.book.large_image_url %>
  <%#= post.text %>

<% end %>

<% @books.each do |book| %>

  <%#= image_tag post.book.large_image_url %>
  <%#= book.title %>

<% end %>


<% @books.zip(@posts) do |book, post| %>

  <%= book.title %>
  <%= link_to post_path(post.id) do %>
    <%= image_tag book.large_image_url %>
  <% end %>
  <%= post.text %>

<% end %>